{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noUnusedParameters": true,
    "isolatedModules": true
  }
}
